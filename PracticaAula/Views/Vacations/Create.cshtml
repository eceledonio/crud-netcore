@model PracticaAula.Models.Vacations

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vacations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label">Fecha de salida</label>
                <input asp-for="DepartureDate" class="form-control" />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfAdmission" class="control-label">Fecha de fin</label>
                <input asp-for="DateOfAdmission" class="form-control" />
                <span asp-validation-for="DateOfAdmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Empleado</label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.Employee">
                <option value="" default="" selected="">Seleccione un empleado</option>  
                </select>
            </div>
            <div class="form-group">
                 <a class="btn btn-secondary" asp-action="Index">Regresar</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
